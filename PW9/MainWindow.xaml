<Window x:Class="PW9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400" Background="#FF424242">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtBlock" Text="Добро пожаловать в почтовый редактор текста!" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Bahnschrift Condensed" FontSize="24" Foreground="White" Width="380" TextWrapping="Wrap" TextAlignment="Center"/>
        <Button x:Name="create_word" Content="Создать Word Документ" Width="300" Grid.Row="1" Click="create_word_Click"/>
        <Button x:Name="create_excel" Content="Создать Excel Документ" Width="300" Grid.Row="3" Click="create_excel_Click"/>
    </Grid>
</Window>
